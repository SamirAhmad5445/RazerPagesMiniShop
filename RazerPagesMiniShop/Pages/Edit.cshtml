@page
@model RazerPagesMiniShop.Pages.EditModel
@{
}


<div class="overview">
  <div class="title">
    <i class="uil uil-tachometer-fast-alt"></i>
    <span class="text">Adding New Product</span>
  </div>

  <div>
    <form method="post" class="row">
      <input type="hidden" asp-for="product.Id" />

      <div class="mb-3">
        <label asp-for="product.Name" class="form-label">Name</label>
        <input asp-for="product.Name" class="form-control" placeholder="e.g. Awsome Hoodie" value="@Model.product.Name" />
        <span asp-validation-for="product.Name" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3">
        <label asp-for="product.Description" class="form-label">Description</label>
        <input asp-for="product.Description" class="form-control" placeholder="e.g. Awsome Hoodie" value="@Model.product.Description" />
        <span asp-validation-for="product.Description" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3 col-lg-6">
        <label asp-for="product.Quantity" class="form-label">Quantity</label>
        <input type="number" asp-for="product.Quantity" class="form-control" value="@Model.product.Quantity" />
        <span asp-validation-for="product.Quantity" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3 col-lg-6">
        <label asp-for="product.Price" class="form-label">Price</label>
        <input type="number" asp-for="product.Price" class="form-control" value="@Model.product.Price" />
        <span asp-validation-for="product.Price" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3 col-lg-12 d-flex align-items-center mt-4">
        <div class="form-check">
          <input class="form-check-input"
                 type="checkbox"
                 asp-for="product.EnableSize" value="@Model.product.EnableSize" />
          <label asp-for="product.EnableSize" class="form-label">Enable Sizes</label>
        </div>
      </div>

      <div class="mb-3 col-lg-6">
        <label asp-for="product.CompanyId" class="form-label">company</label>
        <select class="form-select" asp-for="product.CompanyId" value="@Model.product.CompanyId">
          <option selected>Select one</option>
          <option value="1">nike</option>
          <option value="2">adidas</option>
        </select>
      </div>

      <div class="mb-3 col-lg-5 d-flex align-items-center mt-lg-4">
        <input class="form-control" type="file" id="formFile" />
      </div>

      <div class="col-lg-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>

    </form>
  </div>
</div>